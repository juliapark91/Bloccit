<h1><%= @party.title %></h1>


  <%= link_to "Edit Party", edit_party_path, class: 'btn btn-success' %>


<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @party.title %></p>
    <% @guests.each do |guest| %>
        <h4 class="media-heading">
          <%= link_to guest.party, [@party, guest] %>
        </h4>
    <% end %>
  </div>
  <div class="col-md-4">

      <%= link_to "New Guest", new_party_guest_path(@party), class: 'btn btn-success' %>

      <%= link_to "Delete Party", @party, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this party?' } %>
    
    <%= will_paginate @guests %>
  </div>
</div>