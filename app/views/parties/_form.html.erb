<%= form_for [party] do |f| %>
  <% if party.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(party.errors.count, "error") %>.</h4>
      <ul>
        <% party.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag([party].errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter party title" %>
  <% end %>
  
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>