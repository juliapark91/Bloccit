<%= form_for [@party, @guest] do |f| %>
  <% if @guest.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@guest.errors.count, "error") %>.</h4>
      <ul>
        <% @guest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(@guest.errors[:firstname]) do %>
    <%= f.label :firstname %>
    <%= f.text_field :firstname, class: 'form-control', placeholder: "Enter guest firstname" %>
  <% end %>
  <%= form_group_tag(@guest.errors[:lastname]) do %>
    <%= f.label :lastname %>
    <%= f.text_field :lastname, class: 'form-control', placeholder: "Enter guest lastname" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>